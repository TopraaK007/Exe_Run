unit UnitRUNN;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm3 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Image1: TImage;
    Button1: TButton;
    Button2: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form3: TForm3;

implementation

{$R *.dfm}

    procedure RunE(Path:AnsiString); Far; External 'Project_Exe.dll';

    function Nail_Remove(DPath:Ansistring):Ansistring; Far; External 'Project4.dll';

procedure TForm3.Button1Click(Sender: TObject);
begin
      var EditPath:Ansistring :=Edit1.Text;
   try
      if(FileExists(EditPath)) then
        begin
            if LowerCase(ExtractFileExt(EditPath))='.exe' then
              begin
                  EditPath:=Nail_Remove(EditPath);
                  RunE(EditPath);
              end
              else
              begin
                MessageDlg('Dosya Exe Uzantýlu uygulama olmalýdýr!', TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
              end;
        end
        else
        begin
          MessageDlg('Dosya Bulunamadý!', TMsgDlgType.mtWarning, [TMsgDlgBtn.mbOK], 0);
        end;
   except
   on E:Exception do
      MessageDlg('Bir Hata Meydana Geldi! ' + E.Message, TMsgDlgType.mtError, [TMsgDlgBtn.mbOK], 0);
   end;
end;

procedure TForm3.FormCreate(Sender: TObject);
begin
Form3.Position:=poScreenCenter;
Form3.BorderStyle:=bsToolWindow;
Label1.Caption:='Bu progmram, klasör, belge veya internet kaynaðýnýn adýný '+#13#10+' yazdýðýnýzda Windows sizin için açakacaktýr.';
end;

end.
